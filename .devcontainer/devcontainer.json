{
	"name": "Self-hosted services devcontainer",
	"image": "ghcr.io/arch-anes/dev-container-kubernetes-ansible:latest",
	"runArgs": [
		"--privileged",
		"--volume=./.devcontainer/ansible:/etc/ansible",
	],
	"postAttachCommand": "ansible-galaxy install -r requirements.yml --force",
	"customizations": {
		"vscode": {
			"extensions": [
				"redhat.vscode-yaml",
				"redhat.ansible",
				"visualstudioexptteam.vscodeintellicode",
				"ms-python.python",
				"ms-python.vscode-pylance",
				"mads-hartmann.bash-ide-vscode",
				"ms-azuretools.vscode-docker",
				"wholroyd.jinja",
				"ms-kubernetes-tools.vscode-kubernetes-tools",
				"chrislajoie.vscode-modelines",
				"eamodio.gitlens"
			]
		}
	}
}